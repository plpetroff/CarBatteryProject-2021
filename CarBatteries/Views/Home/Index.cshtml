@model List<BatteryListingViewModel>

@{
    ViewData["Title"] = "Welcome";
}

@{
    var firstBattery = Model.Any() ? Model[0] : null;
    var secondBattery = Model.Count > 1 ? Model[1] : null;
    var thirdBattery = Model.Count > 2 ? Model[2] : null;
}

@if (!Model.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the battery project!</h1>
        <p class="lead">There are no batteries at the momment!</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Battery" asp-action="Add" class="btn btn-primary btn-lg"  role="button">Add battery</a>
        </p>
    </div>
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstBattery != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstBattery.Brand" alt="@firstBattery.Brand @firstBattery.Capacity Ah">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a asp-controller="Battery" asp-action="Details" asp-route-id="@firstBattery.Id">@firstBattery.Brand @firstBattery.Capacity</a> </h5>

                </div>
            </div>
        }
        @if (secondBattery != null)
        {
            <div class="carousel-item ">
                <img class="d-block w-100" src="@secondBattery.Brand" alt="@secondBattery.Brand @secondBattery.Capacity Ah">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a asp-controller="Battery" asp-action="Details" asp-route-id="@secondBattery.Id">@secondBattery.Brand @secondBattery.Capacity</a> </h5>

                </div>
            </div>
        }
        @if (thirdBattery != null)
        {
            <div class="carousel-item ">
                <img class="d-block w-100" src="@thirdBattery.Brand" alt="@thirdBattery.Brand @thirdBattery.Capacity Ah">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a asp-controller="Battery" asp-action="Details" asp-route-id="@thirdBattery.Id">@thirdBattery.Brand @thirdBattery.Capacity</a> </h5>

                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
