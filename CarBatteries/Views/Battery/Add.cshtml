@model AddBatteryFormModel

@{ 
    ViewData["Title"] = "Add Battery";
}


<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-2 col-sm-12">
            <h3>Add Battery</h3>
            <form method="post">


                <div class="form-group">
                    <label asp-for="BrandId"></label>
                    <select asp-for="BrandId" class="form-control">
                        @foreach (var brand in Model.Brands)
                        {
                            <option value="@brand.Id">@brand.Name</option>

                        }
                    </select>
                </div>


                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>

                        }
                    </select>
                </div>


                <div class="form-group">
                    <label asp-for="TechnologyId"> Battery Technology</label>
                    <select asp-for="TechnologyId" class="form-control">
                        @foreach (var technology in Model.Technologies)
                        {
                            <option value="@technology.Id">@technology.Name</option>

                        }
                    </select>
                </div>



                <div class="form-group">
                    <label asp-for="Brand">Battery Brand</label>
                    <input asp-for="Brand" class="form-control" placeholder="Brand ...">
                </div>

                <div class="form-group">
                    <label asp-for="Brand"></label>
                    <input asp-for="Brand" class="form-control" placeholder="Brand ...">
                </div>

                <input class="btn btn-primary" type="submit" value="Save" />
            </form>

        </div>
    </div>
</div>

